@inherits LayoutComponentBase

<style>
	.mud-nav-link-expand-icon {
        display: none;
    }
</style>

<MudThemingProvider />

<MudGrid>
	<MudItem md="2">
		<MudPaper Width="auto" Height="100%" Class="d-inline-flex py-3" Elevation="0">
			<MudNavMenu Class="mud-width-full">				
				<MudNavLink Href="/education" Icon="@Icons.Material.Filled.Dashboard">Центр обучения</MudNavLink>

				<MudNavGroup Title="Уроки" Icon="@Icons.Material.Filled.MenuBook" Expanded="true">
					<MudNavGroup Title="О компании" Icon="@Icons.Material.Filled.Business" Expanded="true">
