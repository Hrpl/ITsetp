						<MudNavLink Href="/education/lesson1-2" Icon="@Icons.Material.Filled.Bookmark">Ценности компании</MudNavLink>
						<MudNavLink Href="/education/lesson1-3" Icon="@Icons.Material.Filled.Bookmark">Преимущества</MudNavLink>
					</MudNavGroup>
					<MudNavGroup Title="О правилах" Icon="@Icons.Material.Filled.Checklist" Expanded="true">
						<MudNavLink Href="/education/lesson2-1" Icon="@Icons.Material.Filled.Bookmark">Общие правила</MudNavLink>
						<MudNavLink Href="/education/lesson2-2" Icon="@Icons.Material.Filled.Bookmark">Коммуникация</MudNavLink>
						<MudNavLink Href="/education/lesson2-3" Icon="@Icons.Material.Filled.Bookmark">Мероприятия</MudNavLink>
					</MudNavGroup>
				</MudNavGroup>
			</MudNavMenu>
		</MudPaper>
	</MudItem>
	<MudItem md="10">
		<MudMainContent>
			@Body
		</MudMainContent>
	</MudItem>
</MudGrid>

